<tr class="btn-reveal-trigger">
  <td class="align-middle py-2" style="width: 28px;">
    <div class="form-check fs-0 mb-0 d-flex align-items-center">
      <input class="form-check-input" type="checkbox" id="<%= vacation.id %>" data-bulk-select-row="data-bulk-select-row" />
    </div>
  </td>
  <td class="name align-middle white-space-nowrap py-2"><%= vacation.name %></td>
  <% if current_user.super_admin? %>
   <td class="name align-middle white-space-nowrap py-2"><%= vacation.account.name %></td>
  <% end %>

  <td class="address align-middle white-space-nowrap ps-5 py-2"><%= vacation.vacation_type.name %></td>
  <td class="email align-middle py-2"><%= l vacation.starting_at, format: :medium %></td>
  <td class="phone align-middle white-space-nowrap py-2"><%= l vacation.ending_at, format: :medium %></td>
  <td class="align-middle white-space-nowrap py-2 text-end">
    <div class="dropdown font-sans-serif position-static">
      <button class="btn btn-link text-600 btn-sm dropdown-toggle btn-reveal" type="button" id="customer-dropdown-0" data-bs-toggle="dropdown" data-boundary="window" aria-haspopup="true" aria-expanded="false"><span class="fas fa-ellipsis-h fs--1"></span></button>
      <div class="dropdown-menu dropdown-menu-end border py-0" aria-labelledby="customer-dropdown-0">
      <div class="bg-white py-2">
        <%= link_to('Edit', edit_vacation_path(vacation), remote: true, class: 'dropdown-item') %>
        <%= link_to('Delete', vacation_path(vacation), method: :delete, class: 'dropdown-item text-danger', data: {confirm: 'Are you sure'}) %>
      </div>
      </div>
    </div>
  </td>
</tr>
