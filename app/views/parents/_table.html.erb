<div class="table-responsive">
  <table class="table table-sm table-striped fs--1 mb-0 overflow-hidden">
    <thead class="bg-200 text-900">
      <tr>
        <th>
          <div class="form-check fs-0 mb-0 d-flex align-items-center">
            <input class="form-check-input" id="checkbox-bulk-parents-select" type="checkbox" data-bulk-select='{"body":"table-parents-body","actions":"table-parents-actions","replacedElement":"table-parents-replace-element"}' />
          </div>
        </th>
        <th class="sort pe-1 align-middle white-space-nowrap">
          <% if @search.present? %>
            <%= sort_link(@search, :father_first, default_order: :asc)%>
          <% end %>
        </th>
        <th class="sort pe-1 align-middle white-space-nowrap">
          <% if @search.present? %>
            <%= sort_link(@search, :mother_first, default_order: :asc)%>
          <% end %>
        </th>
        <th class="sort pe-1 align-middle white-space-nowrap">Children</th>
        <th class="sort pe-1 align-middle white-space-nowrap">Phone</th>
        <th class="sort pe-1 align-middle white-space-nowrap">Email</th>
        <th class="sort pe-1 align-middle white-space-nowrap">City</th>

        <th class="sort pe-1 align-middle white-space-nowrap" ></th>

      </tr>
    </thead>
    <tbody class="list" id="table-parents-body">
      <% parents.each_with_index do |parent, index| %>
        <%= render 'parent', parent: parent, index: index %>
      <% end %>
    </tbody>
  </table>
</div>
<%= render 'shared/pagination' if @pagy.present? %>
