<tr class="btn-reveal-trigger">
  <td class="align-middle py-2" style="width: 28px;">
    <div class="form-check fs-0 mb-0 d-flex align-items-center">
      <input class="form-check-input" type="checkbox" id="<%= room.id %>" data-bulk-select-row="data-bulk-select-row" />
    </div>
  </td>
  <td class="name align-middle white-space-nowrap py-2"><%= room.name %></td>
  <td class="email align-middle py-2"><%= room.capacity %></td>
  <td class="phone align-middle white-space-nowrap py-2"><%= room.color.to_s %></td>
  <% if current_user.super_admin? %>
   <td class="email align-middle py-2"><%= room.account.name %></td>
  <% end %>


  <td class="align-middle white-space-nowrap py-2 text-end">
    <div class="dropdown font-sans-serif position-static">
      <button class="btn btn-link text-600 btn-sm dropdown-toggle btn-reveal" type="button" id="room-dropdown-<%= index %>" data-bs-toggle="dropdown" data-boundary="window" aria-haspopup="true" aria-expanded="false"><span class="fas fa-ellipsis-h fs--1"></span></button>
      <div class="dropdown-menu dropdown-menu-end border py-0" aria-labelledby="room-dropdown-<%= index %>">
      <div class="bg-white py-2">
        <%= link_to('Edit', edit_room_path(room), remote: true, class: 'dropdown-item') %>
        <%= link_to('Delete', room_path(room), method: :delete, class: 'dropdown-item text-danger') %>
      </div>
    </div>
  </td>
</tr>
