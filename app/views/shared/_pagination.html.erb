<nav class="mt-3">
  <ul class="pagination pagination-sm justify-content-center">
    <% if @pagy.prev %>
      <li class="page-item">
        <%= link_to 'Previous', url_for(page: @pagy.prev.to_s), class: 'page-link', rel: 'prev' %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <span class="page-link">Previous</span>
      </li>
    <% end %>

    <% @pagy.series.each do |item| %>
      <% if item.is_a? Integer %>
        <li class="page-item">
          <%= link_to item, url_for(page: item), class: 'page-link' %>
        </li>
      <% else %>
        <li class="page-item active">
          <span class="page-link"><%= item.to_s %></span>
        </li>
      <% end %>
    <% end %>

    <% if @pagy.next %>
      <li class="page-item">
        <%= link_to 'Next', url_for(page: @pagy.next.to_s), class: 'page-link', rel: 'next' %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <span class="page-link">Next</span>
      </li>
    <% end %>
  </ul>
</nav>
