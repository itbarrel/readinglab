<%= form_for(receipt, id: 'addReceiptForm') do |f| %>
  <div class="modal-header px-card bg-light border-bottom-0">
    <h5 class="modal-title"><%= title %></h5>
    <button class="btn-close me-n1" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body p-card">
    <div class="mb-3">
      <%= f.label :students, class: 'fs-0' %>
      <%= f.collection_select :student_id, Student.order(:first_name), :id, :name, { include_blank: true }, { class: 'form-control' } %>
    </div>
    <div class="mb-3">
      <%= f.label :receipt_type, class: 'fs-0' %>
      <%= f.collection_select :receipt_type_id, ReceiptType.order(:name), :id, :name, { include_blank: true }, { class: 'form-control' } %>
    </div>
    <div class="mb-3">
      <%= f.label :amount, class: 'fs-0' %>
      <%= f.number_field :amount, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :leave_count, class: 'fs-0' %>
      <%= f.number_field :leave_count, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :session_count, class: 'fs-0' %>
      <%= f.number_field :sessions_count, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :discount, class: 'fs-0' %>
      <%= f.number_field :discount, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :discount_reason, class: 'fs-0' %>
      <%= f.text_area :discount_reason, class: 'form-control' %>
    </div>
  </div>
  <div class="card-footer d-flex justify-content-end align-items-center bg-light">
    <%= f.submit 'Save', class: 'btn btn-primary px-4' %>
    <%= f.button 'Cancel', class: 'btn btn-default px-4', type: 'button', data: { 'bs-dismiss': 'modal'} %>
  </div>
<% end %>