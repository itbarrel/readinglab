
<%= form_for(interview, id: 'addInterviewForm') do |f| %>
<div class="modal-header px-card bg-light border-bottom-0">
  <h5 class="modal-title"><%= title %></h5>
  <button class="btn-close me-n1" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body p-card">
  <div class="mb-3">
    <%= f.label :student, class: 'fs-0' %>
    <% students = params[:action] == 'edit' ? current_account.students.where.not(status: :registered) : current_account.students.where.not(status: :active) %>
    <%= f.collection_select :student_id, students.order(:first_name), :id, :name, { include_blank: true }, { class: 'form-control' } %>
  </div>
  <div class="mb-3">
    <%= f.label :schedule_date, class: 'fs-0' %>
    <%= f.datetime_field :date, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :forms, class: 'fs-0' %>
    <%= f.collection_select :form_id, current_account.forms.assessment.order(:name), :id, :name, { include_blank: true }, { class: 'form-control' } %>
  </div>
</div>
<div class="card-footer d-flex justify-content-end align-items-center bg-light">
  <%= f.submit 'Save', class: 'btn btn-primary px-4' %>
  <%= f.button 'Cancel', class: 'btn btn-default px-4', type: 'button', data: { 'bs-dismiss': 'modal'} %>
</div>
<% end %>