<%= form_for(parent, id: 'addParentForm') do |f| %>
<div class="modal-header px-card bg-light border-bottom-0">
  <h5 class="modal-title"><%= title %></h5>
  <button class="btn-close me-n1" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body p-card">
  <div class="row">
    <div class="col-lg-6">
      <div class="mb-3">
        <%= f.label :father_first_name, class: 'fs-0' %>
        <%= f.text_field :father_first, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :father_last_name, class: 'fs-0' %>
        <%= f.text_field :father_last, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :father_phone, class: 'fs-0' %>
        <%= f.number_field :father_phone, class: 'form-control', placeholder: 'Enter your phone number'  %>
      </div>
       <div class="mb-3">
        <%= f.label :father_email, class: 'fs-0' %>
        <%= f.email_field :father_email, class: 'form-control' %>
      </div>  
    </div>
    <div class="col-lg-6">
      <div class="mb-3">
        <%= f.label :mother_first_name, class: 'fs-0' %>
        <%= f.text_field :mother_first, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :mother_last_name, class: 'fs-0' %>
        <%= f.text_field :mother_last, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :mother_phone, class: 'fs-0' %>
        <%= f.number_field :mother_phone, class: 'form-control', placeholder: 'Enter your phone number'  %>
      </div>
       <div class="mb-3">
        <%= f.label :mother_email, class: 'fs-0' %>
        <%= f.email_field :mother_email, class: 'form-control' %>
      </div>  
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4 mb-3">
      <%= f.label :postal_code, class: 'fs-0' %>
      <%= f.number_field :postal_code, class: 'form-control' %>
    </div>
    <div class="col-lg-4 mb-3">
      <%= f.label :city_id, class: 'fs-0' %>
      <%= f.collection_select :city_id, City.all, :id, :name, { include_blank: true }, { class: 'form-control' } %>
    </div>
    <div class="col-lg-4 mb-3">
      <%= f.label :state, class: 'fs-0' %>
      <%= f.text_field :state, class: 'form-control' %>
    </div>
  </div>
  <div class="mb-3">
    <%= f.label :address, class: 'fs-0' %>
    <%= f.text_area :address, class: 'form-control' %>
  </div>
</div>
<div class="card-footer d-flex justify-content-end align-items-center bg-light">
  <%= f.submit 'Save', class: 'btn btn-primary px-4' %>
  <%= f.button 'Cancel', class: 'btn btn-default px-4', type: 'button', data: { 'bs-dismiss': 'modal'} %>
</div>
<% end %>
