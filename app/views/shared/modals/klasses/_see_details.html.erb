<div class="modal-header px-card bg-light border-bottom-0">
  <h5 class="modal-title"><%= title %></h5>
  <button class="btn-close me-n1" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="row">
  <div class="col-md-6 h-100">
    <div class="d-flex btn-reveal-trigger">
      <div class="flex-1 position-relative ps-3">
        <p class="text-1000 mb-0">Class Name:<%= klass.name %></p>
        <p class="text-1000 mb-0"> Class Time:<%=l klass.starts_at, format: :short %></p>
        <p class="text-1000 mb-0">Class Teacher:<%= klass.teacher.name %></p>
        <p class="text-1000 mb-0">No. of Students:<%= klass.max_students %></p>
        <p class="text-1000 mb-0">Total Session:<%= klass.session_range %></p>
        <p class="text-1000 mb-0">Session Left:<%= klass.sessions_left %></p>
          <button id="toggle-button">Toggle Obsolete</button>
                    <input type="hidden" id="klass-id" value="<%= @klass.id %>">
                    <div class="k-o-seller-class">
                      <div class="column">
                      </div>
                      <div class="obsolete">
                      </div>
                    </div>
        </div>
      </div>
</div>
