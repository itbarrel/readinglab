<div class="modal-content border-0">
  <div class="position-absolute top-0 end-0 mt-3 me-3 z-index-1">
    <button class="btn-close btn btn-sm btn-circle d-flex flex-center transition-base" data-bs-dismiss="modal"
      aria-label="Close"></button>
  </div>
  <div class="modal-body p-0">
    <div class="bg-light rounded-top-lg py-3 ps-4 pe-6">
      <h4 class="mb-1" id="staticBackdropLabel"><%= klass.name %></h4>
      <p class="fs--2 mb-0">Teaching by
        <%= link_to klass.teacher.name, staff_path(klass.teacher), class: "link-600 fw-semi-bold" %></p>
    </div>
    <div class="p-4">
      <div class="row">
        <div class="col-lg-6">
          <div class="d-flex">
            <span class="fa-stack ms-n1 me-3">
              <i class="fas fa-circle fa-stack-2x text-200"></i>
              <i class="fa-inverse fa-stack-1x text-primary fas fa-users" data-fa-transform="shrink-2"></i>
            </span>
            <div class="flex-1">
              <h5 class="mb-2 fs-0">Students</h5>
              <ul class="nav flex-lg-column fs--1">
                <% klass.student_classes.each do |sc| %>
                  <li class="list-group-item d-flex justify-content-between align-items-center ">
                    <%= sc.student.name %>
                    <%= link_to(student_class_path(sc), class: "badge badge-soft-warning rounded-pill", method: :delete, remote: true) do %>
                      <span class="fas fa-trash"></span>
                    <% end %>
                  </li>
                <% end %>
                <% unless klass.students.present? %>
                  <p class="text-word-break fs--1">No student in class.<p>
                <% end %>
              </ul>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <div class="kanban-items-container border bg-white dark__bg-1000 rounded-2 py-3 mb-3" style="max-height: none;">
                  <div class="card mb-3 kanban-item shadow-sm dark__bg-1100">
                    <div class="card-body">
                      <p class="fs--1 fw-medium font-sans-serif mb-0">Add a cookie notice which will be shown in the bottom of the page and have a link of &quot;Privacy Policy&quot;</p>
                    </div>
                  </div>
                  <div class="card mb-3 kanban-item shadow-sm dark__bg-1100">
                    <div class="card-body">
                      <p class="fs--1 fw-medium font-sans-serif mb-0">Add a pdf file that describes all the symptoms of COVID-19</p>
                    </div>
                  </div>
                  <div class="card mb-3 kanban-item shadow-sm dark__bg-1100">
                    <div class="card-body">
                      <p class="fs--1 fw-medium font-sans-serif mb-0">Make a Registration form that include Name, Email and a Password input field</p>
                    </div>
                  </div>
                  <div class="card mb-3 kanban-item shadow-sm dark__bg-1100">
                    <div class="card-body">
                      <p class="fs--1 fw-medium font-sans-serif mb-0">Update profile page layout with cover image and user setting menu</p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="kanban-items-container border bg-white dark__bg-1000 rounded-2 py-3 mb-3" style="max-height: none;">
                  <div class="card mb-3 kanban-item shadow-sm dark__bg-1100">
                    <div class="card-body">
                      <p class="fs--1 fw-medium font-sans-serif mb-0">Update all the npm packages and also remove the outdated plugins</p>
                    </div>
                  </div>
                  <div class="card mb-3 kanban-item shadow-sm dark__bg-1100">
                    <div class="card-body">
                      <p class="fs--1 fw-medium font-sans-serif mb-0">Add a getting started page that allows users to see the starting process</p>
                    </div>
                  </div>
                  <div class="card mb-3 kanban-item shadow-sm dark__bg-1100">
                    <div class="card-body">
                      <p class="fs--1 fw-medium font-sans-serif mb-0">Review and test all the task and deploy to the server</p>
                    </div>
                  </div>
                  <div class="card mb-3 kanban-item shadow-sm dark__bg-1100">
                    <div class="card-body">
                      <p class="fs--1 fw-medium font-sans-serif mb-0">Get all the data by API call and show them to the landing page by adding a new section</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <h6 class="mt-5 mt-lg-0">Class Settings</h6>

          <%= form_for StudentClass.new, remote: true do |f| %>
          <%= f.hidden_field :klass_id, value: klass.id %>

          <div class="mb-3">
            <%= f.label :add_student, class: 'fs-0' %>
            <%= f.collection_select :student_id, current_account.students.eligible_for_klass(klass.id), :id, :name, {}, { class: 'form-control' } %>
          </div>
          <div class="d-flex justify-content-end align-items-center">
            <%= f.submit 'Add', class: 'btn btn-primary px-4' %>
          </div>
          <% end %>
          <%= form_for klass, remote: true do |f| %>
            <div class="mb-3">
              <%= f.label :teacher_id, class: 'fs-0' %>
              <%= f.collection_select :teacher_id, current_account.teachers, :id, :name, {}, { class: 'form-control' } %>
            </div>
            <div class="mb-3">
              <%= f.label :room_id, class: 'fs-0' %>
              <%= f.collection_select :room_id, current_account.rooms, :id, :name, {}, { class: 'form-control' } %>
            </div>
            <div class="mb-3">
              <%= f.label :attendance_form_id, class: 'fs-0' %>
              <%= f.collection_select :attendance_form_id, current_account.forms.attendancable, :id, :name, {}, { class: 'form-control' } %>
            </div>
            <div class="mb-3">
              <%= f.label :forms, class:' fs-0' %>
              <%= f.collection_select :form_ids, current_account.forms.where.not(purpose: :attendancable), :id, :name, {include_blank: true, include_hidden: false }, {class: 'form-select  js-choice', multiple: "multiple-select-example" }%>
            </div>

            <div class="d-flex justify-content-end align-items-center">
              <%= f.submit 'Update', class: 'btn btn-primary px-4' %>
            </div>
          <% end %>
          <%= form_tag(extend_sessions_klass_path(klass), remote: true) do |f| %>
          <div class="mb-3">
            <label class="fs-0">Extend Seesions:</label>
            <%= text_field_tag :session_count, nil ,class: 'form-control' %>
          </div>

          <div class="d-flex justify-content-end align-items-center">
            <%= submit_tag 'Extend', class: 'btn btn-primary px-4' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer d-flex justify-content-end align-items-center bg-light">
    <button class="btn btn-default px-4" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
  </div>
</div>

<script>
  draggableInit()
</script>
