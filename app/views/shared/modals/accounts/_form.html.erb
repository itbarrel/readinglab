
<%= form_for(account, id: 'addAccountForm') do |f| %>
  <div class="modal-header px-card bg-light border-bottom-0">
    <h5 class="modal-title"><%= title %></h5>
    <button class="btn-close me-n1" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body p-card">
    <div class="row">
      <div class="col-lg-6">
        <div class="mb-3">
          <%= f.label :name, class: 'fs-0' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :email, class: 'fs-0' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :currency, class: 'fs-0' %>
          <%= f.text_field :currency, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :postal_code, class: 'fs-0' %>
          <%= f.number_field :postal_code, class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="mb-3">
          <%= f.label :account_type, class: 'fs-0' %>
          <%= f.collection_select :account_type_id, AccountType.order(:name), :id, :name, { include_blank: true }, { class: 'form-control' } %>
        </div>
        <div class="mb-3">
          <%= f.label :mobile, class: 'fs-0' %>
          <%= f.text_field :mobile, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :province, class: 'fs-0' %>
          <%= f.text_field :province, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :timezone, class: 'fs-0' %>
          <%= f.select(:timezone, ['Asia/Karachi'], {prompt: 'Select a option'}, { class: 'form-select form-select-md' }) %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <div class="mb-3">
          <%= f.label :address, class: 'fs-0' %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <h5>Admin Details:</h5>
      <%= f.fields_for :admin do |admin_form| %>
        <div class="col-lg-6">
          <div class="mb-3">
            <%= admin_form.label :first_name, class: 'fs-0' %>
            <%= admin_form.text_field :first_name, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= admin_form.label :email, class: 'fs-0' %>
            <%= admin_form.email_field :email, class: 'form-control' %>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="mb-3">
            <%= admin_form.label :last_name, class: 'fs-0' %>
            <%= admin_form.text_field :last_name, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= admin_form.label :password, class: 'fs-0' %>
            <%= admin_form.password_field :password, class: 'form-control' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card-footer d-flex justify-content-end align-items-center bg-light">
    <%= f.submit 'Save', class: 'btn btn-primary px-4' %>
    <%= f.button 'Cancel', class: 'btn btn-default px-4', type: 'button', data: { 'bs-dismiss': 'modal'} %>
  </div>
<% end %>
