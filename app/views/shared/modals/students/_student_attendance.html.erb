<div class="modal-header px-card bg-light border-bottom-0">
  <h5 class="modal-title"><%= title %></h5>
  <button class="btn-close me-n1" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body p-card">
  <%= form_for(:search, class: 'form-inline', url: student_attendance_search_student_path, remote: true, method: :get) do |form| %>
    <div class="">
      <div class="col-auto justify-content-end order-md-1 mb-2">
        <%= form.collection_select(:student_id, current_account.students.order(first_name: :asc), :id, :name, { prompt: 'Select Student', selected: student.id }, { class: 'form-select js-choice', 'aria-label': 'Floating label select', data: { options: { searchEnabled: true } } }) %>
      </div >
    </div>
    <div class="row">
      <div class="col-5">
        <div class="form-group">
          <%= form.date_field :from, data: { behavior: 'daterangepicker' } , class: "form-control datepicker " %>
        </div>
      </div>
      <div class="col-5">
        <div class="form-group">
          <%= form.date_field :to, data: { behavior: 'daterangepicker' }, class: "form-control datepicker" %>
        </div>
      </div>
      <div class="col-2">
        <div class="form-group ml-4">
          <%= form.submit "Search", class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div id="student_attendance_table">
  <%= render partial: 'shared/modals/students/attendance_table', locals: { attendance: attendance } %>
</div>
