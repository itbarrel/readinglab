<tr class="btn-reveal-trigger">
  <td class="name align-middle white-space-nowrap py-2" ><%= student.name %></td>
  <td class="email align-middle white-space-nowrap py-2" ><%= student.attended_sessions %></td>
  <td class="phone align-middle white-space-nowrap py-2 "><%= student.leave_count %></td>
  <td class="phone align-middle white-space-nowrap py-2" ><%= student.paid_sessions %></td>
  <td class="phone align-middle white-space-nowrap py-2" style="padding-right: 10.25rem "><%= student.credit_sessions_to_show %></td>
  <td class="phone align-middle white-space-nowrap py-2" >
    <% if student.next_billing_date.present? %>
      <%= l student.next_billing_date, format: :short %>
    <% end %>
  </td>
  <td class="phone align-middle white-space-nowrap py-2" >
    <% if student.last_session_processed.present? %>
      <%= l student.last_session_processed, format: :short %>
    <% end %>
  </td>

  <% if current_user.admin? %>
  <td class="align-middle white-space-nowrap py-2 text-end">
    <div class="dropdown font-sans-serif position-static">
      <button class="btn btn-link text-600 btn-sm dropdown-toggle btn-reveal" type="button" id="customer-dropdown-0" data-bs-toggle="dropdown" data-boundary="window" aria-haspopup="true" aria-expanded="false"><span class="fas fa-ellipsis-h fs--1"></span></button>
      <div class="dropdown-menu dropdown-menu-end border py-0" aria-labelledby="customer-dropdown-0">
        <div class="bg-white py-2">
          <%= link_to('Edit', edit_billing_path(student), remote: true, class: 'dropdown-item') %>
          <%= link_to('reset', reset_billing_student_path(student), remote: true, class: 'dropdown-item') %>
        </div>
    </div>
  </td>
  <% end %>
</tr>
