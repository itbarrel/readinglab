<tr class="btn-reveal-trigger">
  <td class="name align-middle white-space-nowrap py-2"><%= student.name %></td>
  <td class="phone align-middle white-space-nowrap py-2 "><%= student.total_sessions %></td>
  <td class="email align-middle white-space-nowrap py-2" style="padding-right: 10.25rem "><%= student.sessions_count %></td>
  <td class="phone align-middle white-space-nowrap py-2" style="padding-right: 10.25rem "><%= student.leave_count %></td>
  <td class="phone align-middle white-space-nowrap py-2"><%= student.meeting_purchased %></td>
  <td class="phone align-middle white-space-nowrap py-2"><%= l student.next_billing_date, format: :short if student.next_billing_date.present?%></td>
</tr>
