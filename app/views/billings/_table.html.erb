<div class="table-responsive">
  <table class="table table-sm table-striped fs--1 mb-0 overflow-hidden">
    <thead class="bg-200 text-900">
      <tr>
        <th class="sort pe-1 align-middle white-space-nowrap">
          <% if @search.present? %>
            <%= sort_link(@search, :name, default_order: :asc)%>
          <% end %>
        </th>
        <th class="sort pe-1 align-middle white-space-nowrap">Attended sessions</th>
        <th class="sort pe-1 align-middle white-space-nowrap">Leave sessions</th>
        <th class="sort pe-1 align-middle white-space-nowrap">Paid sessions</th>
        <th class="sort pe-1 align-middle white-space-nowrap">Credit Sessions</th>
        <th class="sort pe-1 align-middle white-space-nowrap">Last Processed Date</th>
        <th class="sort pe-1 align-middle white-space-nowrap">Next Billing Date(Guessed)</th>
        <th class="sort pe-1 align-middle white-space-nowrap">Next Billing Date(Calculated)</th>
        <th class="sort pe-1 align-middle white-space-nowrap" ></th>
      </tr>
    </thead>
    <tbody class="list" id="table-students-body">
      <% students.each_with_index do |student, index| %>
        <%= render 'student', student: student, index: index %>
      <% end %>
    </tbody>
  </table>
</div>
<%= render 'shared/pagination', query: {}, js_request: false if @pagy.present? %>
