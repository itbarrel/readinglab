<div class="table-responsive">
  <table class="table table-sm table-striped fs--1 mb-0 overflow-hidden">
    <thead class="bg-200 text-900">
      <tr>
        <th>
          <div class="form-check fs-0 mb-0 d-flex align-items-center">
            <input class="form-check-input" id="checkbox-bulk-interviews-select" type="checkbox" data-bulk-select='{"body":"table-interviews-body","actions":"table-interviews-actions","replacedElement":"table-interviews-replace-element"}' />
          </div>
        </th>
        <th class="sort pe-1 align-middle white-space-nowrap">
          <% if @search.present? %>
            <%= sort_link(@search, :student_first_name, default_order: :asc)%>
          <% end %>
        </th>
        <th class="sort pe-1 align-middle white-space-nowrap">Date</th>
        <th class="sort pe-1 align-middle white-space-nowrap" >Status</th>
        <th class="sort pe-1 align-middle white-space-nowrap" ></th>

      </tr>
    </thead>
    <tbody class="list" id="table-interviews-body">
      <% interviews.each_with_index do |interview, index| %>
        <%= render 'interview', interview: interview, index: index %>
      <% end %>
    </tbody>
  </table>
</div>
<%= render 'shared/pagination', query: {}, js_request: false if @pagy.present? %>
