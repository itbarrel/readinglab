<% content_for :search_includes do %>
<%= render partial: 'shared/search', locals: { search_key: :amount_cont } %>
<% end %>

<div class="card mb-3"
  data-list='{"valueNames":["name","strating date","ending date","vacation type","action"],"page":15}'>
  <div class="card-header">
    <div class="row flex-between-center">
      <div class="col-4 col-sm-auto d-flex align-items-center pe-0">
        <h5 class="fs-0 mb-0 text-nowrap py-2 py-xl-0">Daily Report</h5>
      </div>
      <div class="col-8 col-sm-auto text-end ps-2">
        <div class="d-none" id="table-reports-actions">
          <div class="d-flex">
            <select class="form-select form-select-sm" aria-label="Bulk actions">
              <option selected="">Bulk actions</option>
              <option value="Export">Export</option>
            </select>
            <button class="btn btn-falcon-default btn-sm ms-2" id="listing-bulk-action" type="button">Apply</button>
          </div>
        </div>
        <div id="table-reports-replace-element">
          <button class="btn btn-falcon-default btn-sm mx-2" type="button">
            <span class="fas fa-filter" data-fa-transform="shrink-3 down-2"></span>
            <span class="d-none d-sm-inline-block ms-1">Filter</span>
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body" id="dailyReportsTable">
    <div class="table">
      <%= form_tag( meetings_path, id: 'showMeetingForm', method: :get, remote: true) do %>
        <div class="p-2 mb-3">
          <div class="row">
            <div class="col-lg-8">
              <%= date_field_tag :classes_at, nil, class: 'form-control datetimepicker', placeholder: "hh:mm /dd/mm/yyyy" %>
            </div>
            <div class="col-lg-4">
              <%= submit_tag "Search", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div id="reports-classes">
    </div>
  </div>
</div>

<% content_for :modal_includes do %>
<%= render partial: 'shared/modals/basic', locals: { modal_id: 'addReportModal' } %>
<% end %>

<% content_for :javascript_includes do %>
<%= javascript_include_tag "controllers/#{params[:controller]}/#{params[:action]}", defer: true %>
<% end %>
