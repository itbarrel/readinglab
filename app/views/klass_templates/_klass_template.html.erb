<tr class="btn-reveal-trigger">
  <td class="align-middle py-2" style="width: 28px;">
    <div class="form-check fs-0 mb-0 d-flex align-items-center">
      <input class="form-check-input" type="checkbox" id="<%= klass_template.id %>" data-bulk-select-row="data-bulk-select-row" />
    </div>
  </td>
  <td class="name align-middle white-space-nowrap py-2"><%= klass_template.name %></td>
  <td class="phone align-middle white-space-nowrap py-2"><%= klass_template.teacher&.first_name%></td>
  <td class="phone align-middle white-space-nowrap py-2"><%= klass_template.room.name %></td>
  <td class="phone align-middle white-space-nowrap py-2"><%= klass_template.max_students %></td>
  <td class="email align-middle py-2"><%= klass_template.duration%></td>
  <td class="email align-middle py-2"><%= klass_template.start%></td>
  <td class="email align-middle py-2"><%= klass_template.session_range%></td>

  <td class="align-middle white-space-nowrap py-2 text-end">
    <div class="dropdown font-sans-serif position-static">
      <button class="btn btn-link text-600 btn-sm dropdown-toggle btn-reveal" type="button" id="klass_template-dropdown-<%= index %>" data-bs-toggle="dropdown" data-boundary="window" aria-haspopup="true" aria-expanded="false"><span class="fas fa-ellipsis-h fs--1"></span></button>
      <div class="dropdown-menu dropdown-menu-end border py-0" aria-labelledby="klass_template-dropdown-<%= index %>">
        <div class="bg-white py-2">
        <%= link_to('Edit', edit_klass_template_path(klass_template), remote: true, class: 'dropdown-item') %>
        <%= link_to('Delete', klass_template_path(klass_template), method: :delete, class: 'dropdown-item text-danger', data: {confirm: 'Are you sure'}) %>
      </div>
      </div>
    </div>
  </td>
</tr>
