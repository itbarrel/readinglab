<% content_for :search_includes do %>
  <%= render partial: 'shared/search', locals: { search_key: :name_cont } %>
<% end %>

<div class="card mb-3" id="customersTable"
  data-list='{"valueNames":["name","strating date","ending date","vacation type","action"],"page":15}'>
  <div class="card-header">
    <div class="row flex-between-center">
      <div class="col-4 col-sm-auto d-flex align-items-center pe-0"> 
        <h5 class="fs-0 mb-0 text-nowrap py-2 py-xl-0">Messages</h5>
      </div>
      <div class="col-8 col-sm-auto text-end ps-2">
        <div id="table-customers-replace-element">
          <%= link_to(new_message_template_path, remote: true, class: 'btn btn-falcon-default btn-sm') do %>
          <span class="fas fa-plus" data-fa-transform="shrink-3 down-2"></span>
          <span class="d-none d-sm-inline-block ms-1">New</span>
          <% end %>
          <button class="btn btn-falcon-default btn-sm mx-2" type="button"><span class="fas fa-filter"
              data-fa-transform="shrink-3 down-2"></span><span
              class="d-none d-sm-inline-block ms-1">Filter</span></button>
          <button class="btn btn-falcon-default btn-sm" type="button"><span class="fas fa-external-link-alt"
              data-fa-transform="shrink-3 down-2"></span><span
              class="d-none d-sm-inline-block ms-1">Export</span></button>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-sm table-striped fs--1 mb-0 overflow-hidden">
        <thead class="bg-200 text-900">
          <tr>
            <th>
              <div class="form-check fs-0 mb-0 d-flex align-items-center">
                <input class="form-check-input" id="checkbox-bulk-customers-select" type="checkbox"
                  data-bulk-select='{"body":"table-customers-body","actions":"table-customers-actions","replacedElement":"table-customers-replace-element"}' />
              </div>
            </th>
            <th class="sort pe-1 align-middle white-space-nowrap" data-sort="starting date">Name</th>
            <th class="sort pe-1 align-middle white-space-nowrap" data-sort="max_students">Description</th>
            <th class="sort pe-1 align-middle white-space-nowrap"></th>
          </tr>
        </thead>
        <tbody class="list" id="table-customers-body">
          <% @message_templates.each do |message_template| %>
            <%= render message_template %>
          <% end %>
        </tbody>  
      </table>  
    </div>
    <%= pagy_bootstrap_nav(@pagy).html_safe %>
  </div>
</div>
<% content_for :modal_includes do %>
  <%= render partial: 'shared/modals/basic', locals: { modal_id: 'addMessageTemplateModal' } %>
<% end %>


