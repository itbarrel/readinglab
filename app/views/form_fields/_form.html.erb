<%= form_with model: @form_field do |form| %>
  <div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5 card_design">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-7" style = "align : center;">
            <div class="p-5">
              <div class="text-center">
              </div>
              <form class="user">

                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <%= form.label :name %>
                    <%= form.text_field :name, :required => true,class: "form-control form-control-user",placeholder: "Name", id: "exampleFirstName" %>
                  </div>

                  <div class="col-sm-6">
                    <%= form.label :description %>
                    <%= form.text_area :description, class: "form-control form-control-user",placeholder: "Description", id: "exampleLastName" %>
                  </div>
                </div>

                <div class="form-group">
                  <%= form.label :model_key %>
                  <%= form.text_field :model_key, class: "form-control form-control-user",placeholder: "Model Key", id: "exampleInputEmail" %>
                </div>

                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <%= form.label :sort_order %>
                    <%= form.text_field :sort_order, :required => true,class: "form-control form-control-user",placeholder: "Sort Order", id: "exampleInputPassword" %>
                  </div>

                  <div class="col-sm-6">
                    <%= form.label :field_type %>
                    <%= form.text_field :field_type, class: "form-control form-control-user",placeholder: "Field Type", id: "exampleInputPassword" %>
                  </div>

                  <div class="col-sm-6">
                    <%= form.label :data_type %>
                    <%= form.text_field :data_type, class: "form-control form-control-user",placeholder: "Data Type", id: "exampleInputPassword" %>
                  </div>

                  <div class="col-sm-6">
                    <%= form.label :necessary %>
                    <%= form.check_box :necessary %>
                  </div>
                </div>
                <%= form.fields_for :field_value do |f| %>

                  <div class="col-sm-6 row">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: "form-control form-control-user", placeholder: "Name"  %>
                  </div>

                  <div class="col-sm-6 row">
                    <%= f.label :usage %>
                    <%= f.text_field :usage, class: "form-control form-control-user", placeholder: "Usage"  %>
                  </div>
                <%end%>
                <br />
                <div class="actions">
                  <%= form.submit class:"btn btn-primary btn-user" %>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
