<div class="container-fluid">
  <h1>Communication</h1>
</div>


<div class="container-fluid">
  <!-- Control the column width, and how they should appear on different devices -->
  <div class="row">
    <div class="col-sm-5">
      <div class="col-lg-12 col-md-12 col-sm-12 mb-30">
        <div class="pd-40 card-box">
          <h5 class="h4 text-blue mb-20"></h5>
          <div class="tab">
            <ul class="nav nav-tabs customtab" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#home2" role="tab"
                  aria-selected="true">Class-wise</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#profile2" role="tab" aria-selected="false">General</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#contact2" role="tab" aria-selected="false">Staff</a>
              </li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane fade show active" id="home2" role="tabpanel">
                <div class="pd-20">
                  <%= form_with(url: students_path, method: :get) do |f| %>
                  <%= f.date_field :classes_at, class: "form-control" %>
                  <%= f.submit 'Search' %>
                  <% end %>
                </div>
              </div>
              <div class="tab-pane fade" id="profile2" role="tabpanel">
                <div class="pd-20">
                </div>
              </div>
              <div class="tab-pane fade" id="contact2" role="tabpanel">
                <div class="pd-20">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      MASHAL ZAREEN
    </div>
    <div class="col-sm-7">
      <div class="pd-10 card-box mb-20">
        <div class="clearfix">
          <h1 class="text-blue h1">Create Message</h1>
          <p class="mb-30"></p>
        </div>
        <div class="wizard-content">

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= form_with url: "/communication", html: {class: 'tab-wizard wizard-circle wizard' }, method: :get do |f| %>
                <%= f.label :Title %>
                <%= f.text_field :title, class: "form-control" %>

                <%= f.label :Predefined %>
                <%= f.select :predefined, ['option1', 'option2', 'option3'], {include_blank: "Select"}, {class: "form-control"}%>

                <%= f.label :Message %>
                <%= f.text_field :message, class: "form-control" %>
                <%= f.submit "Submit", class: "btn btn-primary" %>
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
