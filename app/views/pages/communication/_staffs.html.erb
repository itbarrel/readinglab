<div class="card mb-3" id="staffsTable" data-list='{"valueNames":[],"page":15}'>
  <div class="card-header">
    <div class="row flex-between-center">
      <div class="col-4 col-sm-auto d-flex align-items-center pe-0">
          <h5 class="fs-0 mb-0 text-nowrap py-2 py-xl-0">Staff</h5>
      </div>
    </div>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-sm table-striped fs--1 mb-0 overflow-hidden">
        <thead class="bg-200 text-900">
          <tr>
            <th>
              <div class="form-check fs-0 mb-0 d-flex align-items-center">
                <input class="form-check-input" id="checkbox-bulk-staffs-select" type="checkbox" data-bulk-select='{"body":"table-staffs-body","actions":"table-staffs-actions","replacedElement":"table-staffs-replace-element"}' />
              </div>
            </th>
            <th class="sort pe-1 align-middle white-space-nowrap" data-sort="name">Name</th>
          </tr>
        </thead>
        <tbody class="list" id="table-staffs-body">
          <% staffs.each do |staff| %>
            <tr class="btn-reveal-trigger">
              <td class="align-middle py-2" style="width: 28px;">
                <div class="form-check fs-0 mb-0 d-flex align-items-center">
                  <input class="form-check-input communications-staffs" type="checkbox" id="<%= staff.id %>" data-bulk-select-row="data-bulk-select-row" />
                </div>
              </td>
              <td class="name align-middle white-space-nowrap py-2">
                <%= staff.first_name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
