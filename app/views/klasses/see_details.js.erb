$('#addSeeDetailsModal .modal-content').html("<%= j render 'shared/modals/klasses/see_details', klass: @klass, title: 'Details'  %>");
$('#addSeeDetailsModal').modal('show');

$(document).ready(function() {
  $('#toggle-button').click(function() {
    var klassId = $('#klass-id').val();
    $.ajax({
      url: '/klasses/' + klassId + '/toggle_obsolete',
      type: 'POST',
      dataType: 'json',
      success: function(data) {
        if (data.obsolete) {
          $('.obsolete').show();
        } else {
          $('.obsolete').hide();
        }
      }
    });
  });
});
