<div class="table-responsive">
  <table class="table table-sm table-striped fs--1 mb-0 overflow-hidden">
    <thead class="bg-200 text-900">
      <tr>
        <th>
          <div class="form-check fs-0 mb-0 d-flex align-items-center">
            <input class="form-check-input" id="checkbox-bulk-staffs-select" type="checkbox" data-bulk-select='{"body":"table-staffs-body","actions":"table-staffs-actions","replacedElement":"table-staffs-replace-element"}' />
          </div>
        </th>
        <th class="sort pe-1 align-middle white-space-nowrap">
          <% if @search.present? %>
            <%= sort_link(@search, :first_name, default_order: :asc)%>
          <% end %>
        </th>
        <th class="sort pe-1 align-middle white-space-nowrap">
          <% if @search.present? %>
            <%= sort_link(@search, :last_name, default_order: :asc)%>
          <% end %>
        </th>
        <th class="sort pe-1 align-middle white-space-nowrap">Role</th>
        <th class="sort pe-1 align-middle white-space-nowrap">Email</th>
        <th class="sort pe-1 align-middle white-space-nowrap">Phone</th>

        <th class="sort pe-1 align-middle white-space-nowrap" ></th>
      </tr>
    </thead>
    <tbody class="list" id="table-staffs-body">
      <% staffs.each_with_index do |staff, index| %>
        <%= render 'staff', staff: staff, index: index %>
      <% end %>
    </tbody>
  </table>
</div>
<%= render 'shared/pagination', query: {}, js_request: false if @pagy.present? %>
